<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#ffffff"
    android:orientation="vertical" 
    android:id="@+id/ll_addr">

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#f5f5f5" />

    <ImageView
        android:id="@+id/flower_border"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@drawable/e2_flower_border" />

    <LinearLayout
        android:id="@+id/ll_chose_address"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/addr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="收货人"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/addr_phone"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="18383838383"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/addr_region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="联系地址"
        android:textSize="13dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.5dp"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit_address"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/address_manager_edit_btn" />

        <View
            android:layout_width="2.5dp"
            android:layout_height="fill_parent"
            android:background="#f5f5f5" />

        <Button
            android:id="@+id/del_address"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/address_manager_del_btn" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.5dp"
        android:background="#f5f5f5" />

</LinearLayout>