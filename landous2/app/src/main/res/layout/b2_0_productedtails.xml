<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 宝贝详情 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/base_image_gallery" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f7f7f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp" >

            <TextView
                android:id="@+id/tv_productname"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="false"
                android:text=""
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_goods_click"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0人浏览"
                android:textColor="@color/color_text_gray" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="#f7f7f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="￥0.00"
                android:textColor="@color/color_orange"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="￥0.00"
                android:textColor="@color/color_text_gray"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_salenum"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:gravity="right"
                android:text="0件"
                android:textColor="@color/color_text_gray"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/min_total_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="满29元包邮"
                android:textColor="@color/color_text_gray"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_goods_storage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="库存：10"
                android:textColor="@color/color_text_gray"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingLeft="30dp"
                android:text="2小时送达"
                android:textColor="@color/color_text_gray"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:background="#f7f7f7" />

        <RelativeLayout
            android:id="@+id/rl_shopid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shopsbg"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="店铺:七匹狼旗舰店"
                android:textColor="@color/filter_text_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_goshop"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="进入店铺"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shopsbg"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="选择颜色分类、尺寸大小"
                android:textColor="@color/color_text_gray"
                android:textSize="16dp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@color/color_line_gray"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="猜你喜欢"
            android:textColor="@color/color_text_gray" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f7f7f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="#f7f7f7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/searcher_no_result_empty_icon" />

                <TextView
                    android:id="@+id/tv_ad_1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/diandianbg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_ad1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|bottom"
                        android:text="￥0.00"
                        android:textColor="@color/color_orange"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_ad1_num"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="0人购买"
                        android:textColor="@color/color_text_gray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/searcher_no_result_empty_icon" />

                <TextView
                    android:id="@+id/tv_ad_2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/diandianbg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_ad2_price"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|bottom"
                        android:text="￥0.00"
                        android:textColor="@color/color_orange"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_ad2_num"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="0人购买"
                        android:textColor="@color/color_text_gray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/color_gray"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="#f7f7f7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ad_3"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/searcher_no_result_empty_icon" />

                <TextView
                    android:id="@+id/tv_ad_3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/diandianbg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_ad3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|bottom"
                        android:text="￥0.00"
                        android:textColor="@color/color_orange"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_ad3_num"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="0人购买"
                        android:textColor="@color/color_text_gray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ad_4"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/searcher_no_result_empty_icon" />

                <TextView
                    android:id="@+id/tv_ad_4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/diandianbg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_ad4_price"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|bottom"
                        android:text="￥0.00"
                        android:textColor="@color/color_orange"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_ad4_num"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="0人购买"
                        android:textColor="@color/color_text_gray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>